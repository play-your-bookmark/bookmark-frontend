{
  "plugins": ["prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "react-app",
    "react-app/jest",
    "airbnb",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "endOfLine": "auto",
        "semi": true,
        "printWidth": 100
      }
    ],
    "quotes": [
      2,
      "double",
      {
        "avoidEscape": false
      }
    ],
    "react/react-in-jsx-scope": 0,
    "react/jsx-filename-extension": 0,
    "react/prop-types": 0,
    "react/button-has-type": 0,
    "no-unused-vars": 0,
    "no-param-reassign": 0,
    "no-shadow": 0,
    "class-methods-use-this": 0,
    "no-plusplus": 0,
    "no-use-before-define": 0,
    "arrow-body-style": 0,
    "operator-linebreak": 0,
    "dot-notation": 0,
    "consistent-return": 0,
    "max-len": [1, { "code": 100 }],
    "no-await-in-loop": 0
  }
}
